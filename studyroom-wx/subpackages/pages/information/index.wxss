.van-button--primary {
  border-radius: 100rpx !important;
  width: 75% !important;
  margin-top: 30rpx;
} 
.fill_data {
  margin-top: 10rpx;
  height: 100rpx;
  border-bottom: 1rpx solid rgb(227, 227, 227);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.fill_form {
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.from_image {
  height: 140rpx;
  border-bottom: 1rpx solid rgb(227, 227, 227);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.img_border {
  overflow: hidden;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #b5f3ff;
}
.img {
  width: 100%;
  height: 100%;
}

.weui-input {
  text-align: right;
}
.fill_remarks {
  padding-top: 35rpx;
}
.weui-textarea {
  position: relative;
  width: 100%;
  height: 200rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  margin-top: 15rpx;
}
.currentWordNumber {
  position: absolute;
  bottom: 24rpx;
  right: 26rpx;
  color: #888;
}