.section {
  width: 100%;
  height: 100%;
  overflow: auto;
}
.header {
  padding-bottom: 100rpx;
  background: rgb(255, 255, 255);
}
.header_title {
  text-align: center;
  font-size: 40rpx;
  padding-bottom: 20rpx;
  color: rgb(127, 127, 127);
}
.header_content {
  text-indent: 40rpx;
  position: relative;
}
.header_time {
  position: absolute;
  bottom: -60rpx;
  right: 0;
  font-size: 26rpx;
}

/* 封禁用户 */
.userName {
  margin-top: 20rpx;
  background: #ffffff;
  padding-bottom: 30rpx;
}
.userName_content {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
}
.userName_title {
  text-align: center;
  font-size: 50rpx;
  font-weight: 700;
  color: rgb(127, 127, 127);
  padding-bottom: 20rpx;
}
.blocked_users {
  padding-top: 20rpx;
  width: 25%;
  text-align: center;
}
.userName_portrait {
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #82f0ff96;
}
.seize {
  width: 100rpx;
  margin: 0 auto;
}
.img {
  width: 100%;
  height: 100%;
}

/* 留言 */
.message_content {
  margin-top: 60rpx;
  color: rgb(104, 104, 104);
}
.public {
  padding-top: 10rpx;
}